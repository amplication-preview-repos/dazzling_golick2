datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model PasswordEntry {
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  notes     String?
  password  String?
  title     String?
  updatedAt DateTime @updatedAt
  url       String?
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
  username  String?
}

model EncryptionDetails {
  algorithm String?
  createdAt DateTime @default(now())
  id        String   @id @default(cuid())
  key       String?
  updatedAt DateTime @updatedAt
  user      User?    @relation(fields: [userId], references: [id])
  userId    String?
}

model Session {
  createdAt DateTime  @default(now())
  expiresAt DateTime?
  id        String    @id @default(cuid())
  token     String?
  updatedAt DateTime  @updatedAt
  user      User?     @relation(fields: [userId], references: [id])
  userId    String?
}

model User {
  createdAt              DateTime            @default(now())
  email                  String?             @unique
  encryptionDetailsItems EncryptionDetails[]
  firstName              String?
  id                     String              @id @default(cuid())
  lastName               String?
  password               String
  passwordEntries        PasswordEntry[]
  passwordHash           String?
  roles                  Json
  sessions               Session[]
  updatedAt              DateTime            @updatedAt
  username               String              @unique
}
